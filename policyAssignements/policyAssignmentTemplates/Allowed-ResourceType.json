{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyAssignmentName": {
            "type": "string",
            "defaultValue": "AllowedResourceTypes",
            "metadata": {
                "description": "Specifies the name of the policy assignment."
            }
        },
        "scope": {
            "type": "string",
            "defaultValue": "[subscription().id]",
            "metadata": {
                "description": "Specifies the scope assign the policy."
            }
        },
        "policy_listOfResourceTypesAllowed": {
            "type": "array",
            "metadata": {
                "displayName": "Allowed resource types",
                "strongType": "resourceTypes"
            },
            "defaultValue": [
                "Microsoft.Compute",
                "Microsoft.Storage/storageAccounts",
                "Microsoft.Compute/disks",
                "Microsoft.ApiManagement/service",
                "Microsoft.Network/applicationGateways",
                "Microsoft.DevTestLab/schedules",
                "Microsoft.Automation/automationAccounts",
                "Microsoft.ContainerInstance/containerGroups",
                "Microsoft.ContainerRegistry/registries",
                "Microsoft.Batch/batchAccounts",
                "Microsoft.CognitiveServices/accounts",
                "Microsoft.EventGrid/topics",
                "Microsoft.EventHub/namespaces",
                "Microsoft.Devices/IotHubs",
                "Microsoft.KeyVault/vaults",
                "Microsoft.Network/loadBalancers",
                "Microsoft.Logic/workflows",
                "Microsoft.DBforMySQL/servers",
                "Microsoft.Network/networkInterfaces",
                "Microsoft.Network/networkSecurityGroups",
                "Microsoft.DBforPostgreSQL/servers",
                "Microsoft.Network/publicIPAddresses",
                "Microsoft.RecoveryServices/vaults",
                "Microsoft.Relay/namespaces",
                "Microsoft.Search/searchServices",
                "Microsoft.ServiceBus/namespaces",
                "Microsoft.Sql/servers/databases",
                "Microsoft.Network/trafficManagerProfiles",
                "Microsoft.Compute/virtualMachines/extensions",
                "Microsoft.Compute/virtualMachines",
                "Microsoft.Compute/virtualMachineScaleSets",
                "Microsoft.Network/virtualNetworks"       

            ]
        }
    },
      "variables": {

        "policyAssignmentName":  "Allow-ResourceType"

    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "name": "[variables('policyAssignmentName')]",
            "apiVersion": "2018-05-01",
            "properties": {
                "scope": "[parameters('scope')]",
                "displayname": "Allowed resource types",
                "description": "This policy enables you to specify the resource types that your organization can deploy.",
                "policyDefinitionId": "/providers/Microsoft.Authorization/policyDefinitions/a08ec900-254a-4555-9bf5-e42af04b5c5c",
                "parameters": {
                    "listOfResourceTypesAllowed": {
                        "value": "[parameters('policy_listOfResourceTypesAllowed')]"
                    }
                }
            }
        }
    ]
}