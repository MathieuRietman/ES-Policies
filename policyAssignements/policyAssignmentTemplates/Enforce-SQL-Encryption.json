{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/tenantDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {

        "Scope": {
            "type": "string"
        }


    },
    "variables": {

        "policyAssignmentName": "Enforce-SQL-Encryption",
        "policyDefinitions": "/providers/Microsoft.Authorization/policyDefinitions/86a912f6-9a06-4e26-b447-11b16ba8659f",
        "rbacOwner": "8e3af657-a8ff-443c-a75c-2fe8c4bcb635",
        "scopename": "[last(split(parameters('Scope'),'/'))]",
        "roleAssignmentName": "[guid(concat(variables('policyAssignmentName'),variables('scopename')))]"

    },
    "resources": [
        {

            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "2018-05-01",
            "name": "[variables('policyAssignmentName')]",
            "location": "[deployment().location]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "description": "[variables('policyAssignmentName')]",
                "displayName": "[variables('policyAssignmentName')]",
                "policyDefinitionId": "[variables('policyDefinitions')]",
                "scope": "[ parameters('scope')]"

            }
        },
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2019-04-01-preview",
            "name": "[variables('roleAssignmentName')]",
            "dependsOn": [
                "[variables('policyAssignmentName')]"
            ],
            "properties": {
                "principalType": "ServicePrincipal",
                "roleDefinitionId": "[concat('/providers/Microsoft.Authorization/roleDefinitions/', variables('rbacOwner'))]",
                "principalId": "[toLower(reference(concat('/providers/Microsoft.Authorization/policyAssignments/', variables('policyAssignmentName')), '2018-05-01', 'Full' ).identity.principalId)]"
            }
        }
    ],
    "outputs": {}
}